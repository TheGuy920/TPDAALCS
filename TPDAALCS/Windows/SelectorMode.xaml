<Page
    x:Class="TPDAAC.Windows.Modes.SelectorMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TPDAAC.Windows.Modes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SelectorMode"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <UniformGrid
            Height="75"
            VerticalAlignment="Center"
            Rows="1">
            <Button
                x:Name="StaticFireModeButton"
                Margin="10"
                Click="StaticFireModeButton_Click"
                Content="Static Fire" />
            <Button
                x:Name="LaunchModeButton"
                Margin="10"
                Click="LaunchModeButton_Click"
                Content="Launch" />
            <Button
                x:Name="CalibrationModeButton"
                Margin="10"
                Click="CalibrationModeButton_Click"
                Content="Calibrate" />
            <Button
                x:Name="ControlBuilderModeButton"
                Margin="10"
                Click="ControlBuilderModeButton_Click"
                Content="Control Builder" />
        </UniformGrid>
    </Grid>
</Page>
